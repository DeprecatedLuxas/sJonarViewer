{
    "compilerOptions": {
      "module": "commonjs",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "resolveJsonModule": true,
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*"]
      }
    },
    "include": ["src/**/*"]
  }
  